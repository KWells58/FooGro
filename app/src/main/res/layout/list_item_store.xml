<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/storeItemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Store Name"
        android:textSize="16sp"
        android:textColor="#000000"
    android:fontFamily="sans-serif-medium"
    />

    <Button
        android:id="@+id/storeItemAddToCartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Add to Cart"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/button_background"
    />


    <TextView
        android:id="@+id/storeItemPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/storeItemAddToCartButton"
        android:layout_marginEnd="10dp"
        android:text="Price"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        />

    <TextView
        android:id="@+id/storeItemDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/storeItemNameTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:text="Description"
        android:textSize="14sp"
    android:textColor="#333333"
    android:fontFamily="sans-serif"
    />

</RelativeLayout>
